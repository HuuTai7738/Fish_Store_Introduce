<div class="row">
  <div class="col-lg-3">
    <%= search_form_for [:admin, @q], class: "t-header-search-box" do |f| %>
      <div class="input-group">
        <%= f.text_field :name_cont, placeholder: t("search_by_name") %>
        <%= f.button nil, type: "submit", class: "btn btn-primary" do %>
          <i class="fa-solid fa-circle-arrow-right"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="col-lg-12">
  <div class="grid">
    <h5 class="grid-header">
        <%= link_to t("pro_new"), new_admin_product_path %>
      </h5>
    <div class="item-wrapper">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th><%= t "pro" %></th>
              <th><%= t "pro_name" %></th>
              <th><%= t "status" %></th>
              <th><%= sort_link @q, :price, t("price") %></th>
              <th><%= t "unit" %></th>
              <th><%= sort_link @q, :quantity, t("quantity") %></th>
              <th><%= t "action" %></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <%= render @product %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>
</div>
