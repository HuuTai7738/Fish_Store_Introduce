<section class="shoping-cart spad">
  <div class="container">
    <div class="row">
        <div class="col-lg-12">
          <div class="shoping__cart__table">
            <table>
              <thead>
                <tr>
                  <th>
                    <%= t "order_id" %>
                  </th>
                  <th><%= t "product" %></th>
                  <th><%= t "status" %></th>
                  <th><%= t "total" %></th>
                  <th></th>
                </tr>
              </thead>
              <tbody id="products_cart">
                <%= render partial: "shared/list_orders", collection: @orders, as: :order %>
              </tbody>
            </table>
          </div>
          <div class="row">
            <%== pagy_bootstrap_nav(@pagy) %>
          </div>
        </div>
      </div>
  </div>
</section>
