<% provide :title, t("product_details") %>
<section class="product-details spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-md-6">
        <div class="product__details__pic">
          <div class="product__details__pic__item">
            <%= display_image(@product) %>
          </div>
        </div>
      </div>
      <div class="col-lg-6 col-md-6">
        <div class="product__details__text">
          <h3>
            <%= @product.name %>
          </h3>
          <div class="product__details__price">
            <%= "#{number_to_currency @product.price} / #{@product.unit}" %>
          </div>
          <p>
            <%= @product.description %>
          </p>
          <ul>
            <li>
              <b><%= t "quantity" %></b>
              <span><%= "#{@product.quantity} #{t "product_remain"}" %></span>
            </li>
          </ul>
          <hr>
          <%= form_tag add_to_cart_path do %>
            <%= hidden_field_tag :id, @product.id %>
            <div class="product__details__quantity">
              <div class="quantity">
                <div class="pro-qty">
                  <%= number_field_tag :quantity, 1, max: @product.quantity %>
                </div>
              </div>
            </div>
            <%= submit_tag t("add_to_cart"), class: "primary-btn" %>
          <% end %>
          <ul>
            <li><b><%= t "shipping" %></b> <span><samp><%= t "free" %></samp></span></li>
            <li><b><%= t "unit" %></b> <span><%= @product.unit %></span></li>
            <li><b>Share on</b>
              <div class="share">
                <a href="#"><i class="fa-brands fa-facebook-f"></i></a>
                <a href="#"><i class="fa-brands fa-twitter"></i></a>
                <a href="#"><i class="fa-brands fa-instagram"></i></a>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Product Details Section End -->
