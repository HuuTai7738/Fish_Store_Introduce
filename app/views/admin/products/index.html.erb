<div class="row">
  <div class="col-lg-3">
    <%= form_tag admin_products_path, method: :get, class: "t-header-search-box" do %>
      <div class="input-group">
        <%= text_field_tag :name %>
        <%= button_tag class: "btn btn-primary" do %>
          <i class="fa-solid fa-circle-arrow-right"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="col-lg-12">
  <div class="grid">
    <h5 class="grid-header">
        <%= link_to t("pro_new"), new_admin_product_path %>
      </h5>
    <div class="item-wrapper">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th><%= t "pro" %></th>
              <th><%= t "pro_name" %></th>
              <th><%= t "status" %></th>
              <th><%= t "price" %></th>
              <th><%= t "unit" %></th>
              <th><%= t"quantity" %></th>
              <th><%= t "action" %></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <%= render @product %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>
</div>
