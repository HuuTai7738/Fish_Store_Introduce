<div class="row">
  <%= search_form_for [:admin, @q], class: "t-header-search-box" do |f| %>
    <div class="col-lg-10">
      <div class="input-group">
        <%= f.select :status_eq,
          options_for_select(Order.statuses), {}, class: "form-control" %>
        <%= f.text_field :user_name_cont, class: "form-control", placeholder: t("search_by_name") %>
        <%= f.button nil, type: "submit", class: "btn btn-primary" do %>
          <i class="fa-solid fa-circle-arrow-right"></i>
        <% end %>
      </div>
    </div>
  <% end %>
  <%= search_form_for [:admin, @q], class: "t-header-search-box" do |f| %>
    <div class="col-lg-12">
      <div class="input-group">
        <%= f.date_field :created_at_gteq, class: "form-control input-sm" %>
        <%= f.date_field :created_at_lteq, class: "form-control input-sm" %>
        <%= f.button nil, type: "submit", class: "btn btn-primary" do %>
          <i class="fa-solid fa-circle-arrow-right"></i>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div class="col-lg-20">
  <div class="grid">
    <h5 class="grid-header">
      <%= link_to t("all_order"), admin_orders_path %>
    </h5>
    <div class="item-wrapper">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th><%= t "order_id" %></th>
              <th><%= t "customer_name" %></th>
              <th><%= sort_link @q, :total, t("product_in_order") %></th>
              <th><%= t "order_address" %></th>
              <th><%= sort_link @q, :order_date, t("order_date") %></th>
              <th><%= t "status" %></th>
              <th><%= t "total" %></th>
              <th><%= t "action" %></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <%= render @order %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>
</div>
