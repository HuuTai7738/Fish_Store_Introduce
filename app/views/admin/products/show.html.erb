<div class="col-lg-12">
  <div class="grid">
    <p class="grid-header"><%= t "pro_details" %></p>
    <div class="grid-body">
      <div class="item-wrapper">
        <div class="row mb-3">
          <div class="col-md-5">
            <%= display_image @product %>
          </div>
          <div class="col-md-6">
            <div class="form-group row showcase_row_area">
              <div class="col-md-3 showcase_text_area">
                <b><%= t "pro" %></b>
              </div>
              <div class="col-md-9 showcase_content_area">
                <p><%= @product.id %></p>
              </div>
            </div>
            <div class="form-group row showcase_row_area">
              <div class="col-md-3 showcase_text_area">
                <b><%= t "pro_name" %></b>
              </div>
              <div class="col-md-9 showcase_content_area">
                <p><%= @product.name %></p>
              </div>
            </div>
            <div class="form-group row showcase_row_area">
              <div class="col-md-3 showcase_text_area">
                <b><%= t "description" %></b>
              </div>
              <div class="col-md-9 showcase_content_area">
                <p><%= @product.description %></p>
              </div>
            </div>
            <div class="form-group row showcase_row_area">
              <div class="col-md-3 showcase_text_area">
                <b><%= t "status" %></b>
              </div>
              <div class="col-md-9 showcase_content_area">
                <p><%= @product.status %></p>
              </div>
            </div>
            <div class="form-group row showcase_row_area">
              <div class="col-md-3 showcase_text_area">
                <b><%= t "price" %></b>
              </div>
              <div class="col-md-9 showcase_content_area">
                <p><%= @product.price %></p>
              </div>
            </div>
            <div class="form-group row showcase_row_area">
              <div class="col-md-3 showcase_text_area">
                <b><%= t "unit" %></b>
              </div>
              <div class="col-md-9 showcase_content_area">
                <p><%= @product.unit %></p>
              </div>
            </div>
            <div class="form-group row showcase_row_area">
              <div class="col-md-3 showcase_text_area">
                <b><%= t "quantity" %></b>
              </div>
              <div class="col-md-9 showcase_content_area">
                <p><%= @product.quantity %></p>
              </div>
            </div>
            <div class="form-group row showcase_row_area">
              <div class="col-md-3 showcase_text_area">
                <b><%= t "category_name" %></b>
              </div>
              <div class="col-md-9 showcase_content_area">
                <p><%= @product.category_name %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
