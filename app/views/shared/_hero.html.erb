<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <div class="hero__categories">
        <div class="hero__categories__all">
          <i class="fa fa-bars"></i>
          <span><%= t "department" %></span>
        </div>
        <ul>
          <% @categories.each do |category| %>
            <li><%= link_to category.name, products_path(q: {category_id_eq: category.id}) %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="col-lg-9">
      <div class="hero__search">
        <div class="hero__search__form">
          <%= search_form_for Product.ransack(params[:q]), url: products_path do |f| %>
            <div class="hero__search__categories">
              <%= t "categories" %>
              <span class="arrow_carrot-down"></span>
            </div>
            <%= f.text_field :name_cont, placeholder: "What do yo u need?" %>
            <%= f.button t("search"), type: "submit", class: "site-btn" %>
          <% end %>
        </div>
        <div class="hero__search__phone">
          <div class="hero__search__phone__icon">
            <i class="fa fa-phone"></i>
          </div>
          <div class="hero__search__phone__text">
            <h5>+65 11.188.888</h5>
            <span><%= t "support" %></span>
          </div>
        </div>
        <div class="hero__item set-bg">
          <div class="hero__text">
            <span>
              <%= t "fresh" %>
            </span>
            <h2>
              <%= t "from_sea" %>
            </h2>
            <p>
              <%= t "free" %>
            </p>
            <%= link_to t("shop_now"), products_path, class: "primary-btn" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
