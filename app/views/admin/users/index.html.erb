<div class="row">
  <div class="col-lg-3">
    <%= form_tag admin_users_path, method: :get, class: "t-header-search-box" do %>
      <div class="input-group">
        <%= text_field_tag :name, nil, placeholder: t("search_by_name") %>
        <%= button_tag class: "btn btn-primary" do %>
          <i class="fa-solid fa-circle-arrow-right"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="col-lg-12">
  <div class="grid">
    <div class="item-wrapper">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th><%= t "user_id" %></th>
              <th><%= t "user_name" %></th>
              <th><%= t "user_email" %></th>
              <th><%= t "user_phone_number" %></th>
              <th><%= t "role" %></th>
              <th><%= t "action" %></th>
            </tr>
          </thead>
          <tbody>
            <%= render @user %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>
</div>
